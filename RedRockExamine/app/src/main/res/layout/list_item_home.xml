<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_item_avatar"
            android:layout_marginRight="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
             />

        <TextView
            android:id="@+id/home_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:textColor="@color/home_item_name_blue"
            android:layout_toRightOf="@+id/home_item_avatar"
            android:layout_toEndOf="@+id/home_item_avatar" />

        <TextView
            android:id="@+id/home_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_item_user_name"
            android:layout_toEndOf="@+id/home_item_avatar"
            android:layout_toRightOf="@+id/home_item_avatar"
            android:textSize="10sp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/home_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17sp"/>


    <FrameLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/home_item_sv_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <SurfaceView
                android:id="@+id/home_item_sv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/home_item_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <ImageView
            android:id="@+id/home_item_play_btn1"
            android:src="@drawable/play_btn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>



        <LinearLayout
            android:id="@+id/home_item_control_layout"
            android:layout_marginTop="185dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#333333"
            android:visibility="gone">

            <ImageView
                android:id="@+id/home_item_play_btn2"
                android:src="@drawable/play_button"
                android:padding="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <SeekBar
                android:id="@+id/home_item_seek_bar"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/home_item_download"
                android:padding="3dp"
                android:src="@drawable/download"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/home_item_fullscreen"
                android:padding="3dp"
                android:src="@drawable/fullscreen"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:padding="1dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="23dp"
            android:src="@drawable/ding_not_clicked_black"/>

        <TextView
            android:id="@+id/home_item_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"/>

        <ImageView
            android:layout_marginLeft="55dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/cai_not_clicked_black"/>

        <TextView
            android:id="@+id/home_item_cai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"/>

        <ImageView
            android:layout_marginLeft="55dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/commend_black"/>

        <TextView
            android:id="@+id/home_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"/>

        <ImageView
            android:layout_marginLeft="55dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/forward_black"/>

        <TextView
            android:id="@+id/home_item_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>